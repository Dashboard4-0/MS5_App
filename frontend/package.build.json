{
  "name": "ms5-floor-dashboard",
  "version": "1.0.0",
  "description": "MS5.0 Floor Dashboard - React Native tablet application for factory management",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:staging": "cd android && ./gradlew assembleStaging",
    "build:android:production": "cd android && ./gradlew assembleProduction",
    "build:ios": "cd ios && xcodebuild -workspace MS5FloorDashboard.xcworkspace -scheme MS5FloorDashboard -configuration Release -destination generic/platform=iOS -archivePath MS5FloorDashboard.xcarchive archive",
    "build:ios:staging": "cd ios && xcodebuild -workspace MS5FloorDashboard.xcworkspace -scheme MS5FloorDashboard-Staging -configuration Staging -destination generic/platform=iOS -archivePath MS5FloorDashboard-Staging.xcarchive archive",
    "build:ios:production": "cd ios && xcodebuild -workspace MS5FloorDashboard.xcworkspace -scheme MS5FloorDashboard-Production -configuration Production -destination generic/platform=iOS -archivePath MS5FloorDashboard-Production.xcarchive archive",
    "build:staging": "npm run build:android:staging && npm run build:ios:staging",
    "build:production": "npm run build:android:production && npm run build:ios:production",
    "clean": "react-native clean && cd android && ./gradlew clean && cd ../ios && xcodebuild clean",
    "clean:android": "cd android && ./gradlew clean",
    "clean:ios": "cd ios && xcodebuild clean",
    "reset-cache": "react-native start --reset-cache",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "precommit": "npm run lint && npm run type-check && npm run test:unit",
    "prepare:staging": "npm run lint && npm run type-check && npm run test:unit",
    "prepare:production": "npm run lint && npm run type-check && npm run test:unit && npm run test:integration",
    "deploy:staging": "npm run prepare:staging && npm run build:staging",
    "deploy:production": "npm run prepare:production && npm run build:production",
    "postinstall": "cd ios && pod install",
    "prebuild:android": "npm run clean:android",
    "prebuild:ios": "npm run clean:ios",
    "prebuild:staging": "npm run clean",
    "prebuild:production": "npm run clean"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/drawer": "^6.6.6",
    "react-native-screens": "^3.25.0",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-gesture-handler": "^2.13.4",
    "react-native-reanimated": "^3.5.4",
    "@reduxjs/toolkit": "^1.9.7",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "react-native-async-storage": "^1.19.5",
    "react-native-vector-icons": "^10.0.2",
    "react-native-svg": "^13.14.0",
    "react-native-chart-kit": "^6.12.0",
    "react-native-circular-progress": "^1.3.8",
    "react-native-signature-pad": "^2.0.0",
    "react-native-camera": "^4.2.1",
    "react-native-qrcode-scanner": "^1.5.5",
    "react-native-permissions": "^3.10.1",
    "react-native-device-info": "^10.11.0",
    "react-native-keychain": "^8.1.3",
    "react-native-netinfo": "^9.4.1",
    "react-native-background-job": "^0.2.0",
    "react-native-push-notification": "^8.1.1",
    "react-native-webrtc": "^114.0.0",
    "react-native-fs": "^2.20.0",
    "react-native-pdf": "^6.7.3",
    "react-native-document-picker": "^9.1.1",
    "react-native-image-picker": "^7.0.3",
    "react-native-sound": "^0.11.2",
    "react-native-haptic-feedback": "^2.2.0",
    "react-native-orientation-locker": "^1.5.0",
    "react-native-keep-awake": "^4.0.0",
    "react-native-splash-screen": "^3.3.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-modal": "^13.0.1",
    "react-native-paper": "^5.11.1",
    "react-native-elements": "^3.4.3",
    "react-native-ratings": "^8.1.0",
    "react-native-super-grid": "^4.9.6",
    "react-native-swipe-list-view": "^3.2.9",
    "react-native-snap-carousel": "^3.9.1",
    "react-native-calendars": "^1.1302.0",
    "react-native-date-picker": "^4.3.3",
    "react-native-picker-select": "^8.1.0",
    "react-native-slider": "^0.11.0",
    "react-native-switch": "^0.0.1",
    "react-native-toggle-element": "^1.0.0",
    "react-native-progress": "^5.0.1",
    "react-native-skeleton-placeholder": "^5.2.4",
    "react-native-skeleton-content": "^5.2.4",
    "react-native-shimmer": "^0.6.0",
    "react-native-animatable": "^1.3.3",
    "react-native-lottie": "^6.4.1",
    "react-native-super-avatar": "^1.0.5",
    "react-native-badge": "^0.1.0",
    "react-native-tooltip": "^0.0.9",
    "react-native-popup-menu": "^0.15.11",
    "react-native-action-sheet": "^2.2.0",
    "react-native-alert": "^2.0.0",
    "react-native-toast-message": "^2.1.6",
    "react-native-flash-message": "^0.4.2",
    "react-native-snackbar": "^2.4.0",
    "react-native-loading-spinner-overlay": "^3.0.1",
    "react-native-progress-hud": "^1.0.0",
    "react-native-activity-indicator": "^0.0.1",
    "react-native-spinkit": "^1.5.0",
    "react-native-super-ellipse-mask": "^1.0.0",
    "react-native-masked-text": "^1.13.0",
    "react-native-phone-number-input": "^2.1.0",
    "react-native-country-picker-modal": "^2.0.0",
    "react-native-flag-picker": "^0.0.7",
    "react-native-country-code-picker": "^1.0.0",
    "react-native-currency-input": "^1.0.0",
    "react-native-credit-card-input": "^0.4.1",
    "react-native-otp-verify": "^1.0.4",
    "react-native-otp-inputs": "^7.4.0",
    "react-native-pin-view": "^2.1.1",
    "react-native-confirmation-code-field": "^7.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4",
    "@testing-library/react-native": "^12.4.2",
    "@testing-library/jest-native": "^5.4.3",
    "detox": "^20.14.5",
    "detox-cli": "^20.14.5"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.ts"],
    "testPathIgnorePatterns": ["/node_modules/", "/android/", "/ios/"],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|react-native-.*|@reduxjs/toolkit|react-redux)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ms5-floor-dashboard.git"
  },
  "keywords": [
    "react-native",
    "factory-management",
    "production-dashboard",
    "andon-system",
    "oee-calculator",
    "tablet-app"
  ],
  "author": "MS5.0 Development Team",
  "license": "MIT"
}
